<?xml version="1.0" encoding="UTF-8"?>

<settings version="1.0">

	<page id="general">

		<group id="workspace">
			<setting key="/manager/workspace/workarea-chooser-count" presentation="combobox">
				<option>5</option>
				<option>10</option>
				<option>15</option>
				<option>20</option>
				<option>25</option>
				<option>30</option>
				<option>35</option>
				<option>40</option>
				<option>45</option>
				<option>50</option>
			</setting>
		</group>

		<group id="shutdown">
			<setting key="/shutdown/verify" presentation="checkbox" />
			<setting key="/shutdown/autosave" presentation="checkbox" />
			<setting key="/shutdown/keepalive" presentation="checkbox" />
		</group>

		<page id="updates">
			<group id="updates-schedule">
				<setting key="/manager/product/update/check" presentation="combobox">
					<option key="interval" />
					<option key="schedule" />
					<option key="startup" />
					<option key="manual" />
				</setting>
				<setting key="/manager/product/update/check/interval/unit" presentation="combobox">
					<dependency key="/manager/product/update/check" value="interval" />
					<option key="month" />
					<option key="week" />
					<option key="day" />
					<option key="hour" />
				</setting>
				<setting key="/manager/product/update/check/schedule/when" presentation="combobox">
					<dependency key="/manager/product/update/check" value="schedule" />
					<option key="daily" />
					<option key="sunday" />
					<option key="monday" />
					<option key="tuesday" />
					<option key="wednesday" />
					<option key="thursday" />
					<option key="friday" />
					<option key="saturday" />
				</setting>
				<setting key="/manager/product/update/check/schedule/hour" presentation="combobox">
					<dependency key="/manager/product/update/check" value="schedule" />
					<option value="0" />
					<option value="1" />
					<option value="2" />
					<option value="3" />
					<option value="4" />
					<option value="5" />
					<option value="6" />
					<option value="7" />
					<option value="8" />
					<option value="9" />
					<option value="10" />
					<option value="11" />
					<option value="12" />
					<option value="13" />
					<option value="14" />
					<option value="15" />
					<option value="16" />
					<option value="17" />
					<option value="18" />
					<option value="19" />
					<option value="20" />
					<option value="21" />
					<option value="22" />
					<option value="23" />
				</setting>
			</group>

			<group id="updates-actions">
				<setting key="/manager/product/update/notice" presentation="combobox">
					<option key="once" />
					<option key="minute.30" />
					<option key="hour.1" />
					<option key="hour.3" />
					<option key="none" />
				</setting>
				<setting key="/manager/product/update/found" presentation="combobox">
					<option key="select" />
					<option key="store" />
					<option key="stage" />
				</setting>
				<setting key="/manager/product/update/apply" presentation="combobox">
					<dependency key="/manager/product/update/found" operator="not" value="store" />
					<option key="verify" />
					<option key="ignore" />
					<option key="restart" />
				</setting>
			</group>

		</page>

	</page>

	<page id="appearance">

		<group id="workspace-theme">
			<setting key="/workspace/theme/base" presentation="color" disabled="false" />
			<setting key="/workspace/theme/background" presentation="color" disabled="true" />
			<setting key="/workspace/theme/foreground" presentation="color" disabled="true" />
		</group>

