		<page id="background">
			<group id="background">
				<setting key="/workspace/scenery/back-direction" presentation="combobox">
					<option key="vertical" value="1" />
					<option key="horizontal" value="0" />
				</setting>
				<setting key="/workspace/scenery/back-color1" presentation="color" opaque="true" />
				<setting key="/workspace/scenery/back-color2" presentation="color" opaque="true" />

				<setting key="/workspace/scenery/image-enabled" presentation="checkbox" />
				<setting key="/workspace/scenery/image-file" presentation="file">
					<dependency key="/workspace/scenery/image-enabled" value="true" />
				</setting>
				<setting key="/workspace/scenery/image-style" presentation="combobox">
					<dependency key="/workspace/scenery/image-enabled" value="true" />
					<option key="fill" />
					<option key="fit" />
					<option key="stretch" />
					<option key="tile" />
					<option key="align" />
				</setting>
				<setting key="/workspace/scenery/image-align" presentation="combobox">
					<dependency key="/workspace/scenery/image-enabled" value="true" />
					<dependency key="/workspace/scenery/image-style" value="fill" />
					<dependency key="/workspace/scenery/image-style" value="fit" operator="or" />
					<dependency key="/workspace/scenery/image-style" value="tile" operator="or" />
					<dependency key="/workspace/scenery/image-style" value="align" operator="or" />
					<option key="northwest" />
					<option key="north" />
					<option key="northeast" />
					<option key="west" />
					<option key="center" />
					<option key="east" />
					<option key="southwest" />
					<option key="south" />
					<option key="southeast" />
				</setting>

				<setting key="/workspace/scenery/tint-enabled" presentation="checkbox" />
				<setting key="/workspace/scenery/tint-direction" presentation="combobox">
					<dependency key="/workspace/scenery/tint-enabled" value="true" />
					<option key="vertical" value="1" />
					<option key="horizontal" value="0" />
				</setting>
				<setting key="/workspace/scenery/tint-color1" presentation="color">
					<dependency key="/workspace/scenery/tint-enabled" value="true" />
				</setting>
				<setting key="/workspace/scenery/tint-color2" presentation="color">
					<dependency key="/workspace/scenery/tint-enabled" value="true" />
				</setting>
			</group>
		</page>

		<page id="task-monitor">
			<group id="task-monitor">
				<setting key="/workspace/task/monitor/enabled" presentation="checkbox" />
				<setting key="/workspace/task/monitor/text" presentation="checkbox">
					<dependency key="/workspace/task/monitor/enabled" value="true" />
				</setting>
				<setting key="/workspace/task/monitor/percent" presentation="checkbox">
					<dependency key="/workspace/task/monitor/enabled" value="true" />
					<dependency key="/workspace/task/monitor/text" value="true" />
				</setting>
				<setting key="/workspace/task/monitor/foreground" presentation="color">
					<dependency key="/workspace/task/monitor/enabled" value="true" />
				</setting>
				<setting key="/workspace/task/monitor/background" presentation="color">
					<dependency key="/workspace/task/monitor/enabled" value="true" />
				</setting>
				<setting key="/workspace/task/monitor/queue" presentation="color">
					<dependency key="/workspace/task/monitor/enabled" value="true" />
				</setting>
				<setting key="/workspace/task/monitor/tasks" presentation="color">
					<dependency key="/workspace/task/monitor/enabled" value="true" />
				</setting>
			</group>
		</page>

		<page id="memory-monitor">
			<group id="memory-monitor">
				<setting key="/workspace/memory/monitor/enabled" presentation="checkbox" />
				<setting key="/workspace/memory/monitor/text" presentation="checkbox">
					<dependency key="/workspace/memory/monitor/enabled" value="true" />
				</setting>
				<setting key="/workspace/memory/monitor/percent" presentation="checkbox">
					<dependency key="/workspace/memory/monitor/enabled" value="true" />
					<dependency key="/workspace/memory/monitor/text" value="true" />
				</setting>
				<setting key="/workspace/memory/monitor/foreground" presentation="color">
					<dependency key="/workspace/memory/monitor/enabled" value="true" />
				</setting>
				<setting key="/workspace/memory/monitor/background" presentation="color">
					<dependency key="/workspace/memory/monitor/enabled" value="true" />
				</setting>
				<setting key="/workspace/memory/monitor/allocated" presentation="color">
					<dependency key="/workspace/memory/monitor/enabled" value="true" />
				</setting>
				<setting key="/workspace/memory/monitor/used" presentation="color">
					<dependency key="/workspace/memory/monitor/enabled" value="true" />
				</setting>
				<setting key="/workspace/memory/monitor/refresh" presentation="textline">
					<dependency key="/workspace/memory/monitor/enabled" value="true" />
				</setting>
			</group>
		</page>
	</page>

	<page id="network">

		<group id="ipv6">
			<setting key="/network/enableipv6" presentation="checkbox" />
			<setting key="/network/preferipv6" presentation="checkbox">
				<dependency key="/network/enableipv6" value="true" />
			</setting>
		</group>

		<page id="proxy">
			<group id="proxy-mode">
				<setting key="/network/proxy/mode" presentation="combobox">
					<option key="direct" />
					<option key="manual" />
				</setting>
			</group>
			<group id="proxy-settings">
				<setting key="/network/proxy/all" presentation="checkbox">
					<dependency key="/network/proxy/mode" value="manual" />
				</setting>
				<setting key="/network/proxy/http" presentation="textline">
					<dependency key="/network/proxy/mode" value="manual" />
				</setting>
				<setting key="/network/proxy/https" presentation="textline">
					<dependency key="/network/proxy/all" value="false" />
					<dependency key="/network/proxy/mode" value="manual" />
				</setting>
				<setting key="/network/proxy/ftp" presentation="textline">
					<dependency key="/network/proxy/all" value="false" />
					<dependency key="/network/proxy/mode" value="manual" />
				</setting>
				<setting key="/network/proxy/socks" presentation="textline">
					<dependency key="/network/proxy/all" value="false" />
					<dependency key="/network/proxy/mode" value="manual" />
				</setting>
				<setting key="/network/proxy/exclude" presentation="textarea">
					<dependency key="/network/proxy/mode" value="manual" />
				</setting>
				<setting key="/network/proxy/exclude-info" presentation="infoline">
					<dependency key="/network/proxy/mode" value="manual" />
				</setting>
			</group>

			<group id="proxy-authentication">
				<setting key="/network/proxy/username">
					<dependency key="/network/proxy/mode" value="manual" />
				</setting>
				<setting key="/network/proxy/password" presentation="password">
					<dependency key="/network/proxy/mode" value="manual" />
				</setting>
			</group>
		</page>
	</page>

	<page id="tools">
		<page id="guide">
			<group id="options">
				<setting key="/manager/workspace/guide-auto-expand" presentation="checkbox" />
				<setting key="/manager/workspace/guide-auto-collapse" presentation="checkbox">
					<dependency key="/manager/workspace/guide-auto-expand" value="true" />
				</setting>
			</group>
		</page>
		<page id="resource-manager">
			<group id="options">
				<setting key="/manager/resource/showuri" presentation="checkbox" />
			</group>
			<group id="colors">
				<setting key="/manager/resource/color/hidden" presentation="color" />
				<setting key="/manager/resource/color/disabled" presentation="color" />
				<setting key="/manager/resource/color/modified" presentation="color" />
			</group>
		</page>
	</page>

</settings>
