<?xml version="1.0"?>

<!-- This must match the install descriptor except for the format. -->
<assembly>
	<id>product</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>source/main/assembly/resources</directory>
			<outputDirectory>/bin</outputDirectory>
			<includes>
				<!-- TODO Rename and add later -->
				<!--
				<include>${artifact.artifactId}.exe</include>
				<include>${artifact.artifactId}.ini</include>
				<include>${artifact.artifactId}32.exe</include>
				<include>${artifact.artifactId}64.exe</include>
				<include>${artifact.artifactId}.reg</include>
				-->
				<include>${artifact.artifactId}.ico</include>
				<include>${artifact.artifactId}.png</include>
			</includes>
		</fileSet>
	</fileSets>
	<dependencySets>
		<dependencySet>
			<outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
			<outputDirectory>/mod</outputDirectory>
			<scope>runtime</scope>
		</dependencySet>
	</dependencySets>
</assembly>
