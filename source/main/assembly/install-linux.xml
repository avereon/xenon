<?xml version="1.0"?>

<!-- This must match the product descriptor except for the format. -->
<assembly>
	<id>install-linux</id>
	<formats>
		<format>dir</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>target/jlink</directory>
			<outputDirectory/>
		</fileSet>
		<fileSet>
			<directory>target/main/images</directory>
			<outputDirectory>bin</outputDirectory>
			<includes>
				<include>${project.artifactId}.*</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>source/main/assembly/resources</directory>
			<outputDirectory>bin</outputDirectory>
		</fileSet>
	</fileSets>
	<files>
		<file>
			<source>target/jlink/bin/java</source>
			<outputDirectory>bin</outputDirectory>
			<fileMode>0755</fileMode>
		</file>
		<file>
			<source>target/jlink/bin/keytool</source>
			<outputDirectory>bin</outputDirectory>
			<fileMode>0755</fileMode>
		</file>
		<file>
			<source>target/jlink/bin/${project.artifactId}</source>
			<outputDirectory>bin</outputDirectory>
			<fileMode>0755</fileMode>
		</file>
	</files>
</assembly>
