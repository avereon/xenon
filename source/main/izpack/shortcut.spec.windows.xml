<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>

<izpack:shortcuts version="5.0" xmlns:izpack="http://izpack.org/schema/shortcuts" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://izpack.org/schema/shortcuts http://izpack.org/schema/5.0/izpack-shortcuts-5.0.xsd">

	<programGroup
		defaultName="${project.name}"
		location="applications"
	/>

	<shortcut
		name="${project.name}"
		programGroup="yes"
		desktop="yes"
		applications="yes"
		startMenu="no"
		startup="no"
		target="javaw"
		commandLine="-jar &quot;${INSTALL_PATH}\lib\${project.artifactId}.jar&quot;"
		workingDirectory="${INSTALL_PATH}"
		description="${project.name} application framework."
		iconFile="${INSTALL_PATH}\bin\program.ico"
		iconIndex="0"
		type="Application"
		encoding="UTF-8"
		initialState="noShow"
	/>

	<shortcut
		name="${project.name} Uninstall"
		programGroup="yes"
		desktop="no"
		applications="no"
		startMenu="no"
		startup="no"
		target="${INSTALL_PATH}\lib\remove.jar"
		commandLine=""
		iconFile="%SystemRoot%\system32\SHELL32.dll"
		iconIndex="31"
		description="Uninstall ${project.name} application framework."
	/>

</izpack:shortcuts>
