	<shortcut
		name="${project.name} Uninstall"
		programGroup="yes"
		desktop="no"
		applications="no"
		startMenu="no"
		startup="no"
		target="${INSTALL_PATH}\lib\remove.jar"
		commandLine=""
		iconFile="%SystemRoot%\system32\SHELL32.dll"
		iconIndex="31"
		description="Uninstall ${project.name} application framework."
	/>

</izpack:shortcuts>
