<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>

<!-- The generated shortcut file should be renamed to com.xeomar.xenon.Program.desktop -->

<izpack:shortcuts version="5.0" xmlns:izpack="http://izpack.org/schema/shortcuts" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://izpack.org/schema/shortcuts http://izpack.org/schema/5.0/izpack-shortcuts-5.0.xsd">

	<programGroup
		defaultName="${project.name}"
		location="applications"
	/>

	<shortcut
		name="${project.name}"
		programGroup="yes"
		desktop="yes"
		applications="yes"
		startMenu="no"
		startup="no"
		target="java"
		commandLine="-p ${INSTALL_PATH}/mod -m com.xeomar.xenon/com.xeomar.xenon.Program"
		workingDirectory="${INSTALL_PATH}"
		description="${project.name} modular application framework."
		iconFile="${INSTALL_PATH}/bin/xenon.png"
		iconIndex="0"
		type="Application"
		encoding="UTF-8"
		initialState="noShow"
		categories="Application;"
	/>

